<html>
<head>
	<%= partial "head" %>
</head>
<body>
	<%= partial "navigation" %>
    <div class="container">
		<div class="row-fluid">
			<div class="span3">
				<div class="well sidebar-nav">
					<%= render_navigation(:context => :committee) %>
				</div>
				<% if @sidebar_text %>
				<p class='muted'><%= @sidebar_text %></p>
				<% end %>
			</div>
			<div class="span9">
				<div class="row">
					<div class="span9">
						<h1><%= active_navigation_item_name(:context => :committee) %></h1>
						<h3><%= @committee.name.downcase.titlecase %></h3>
						<% if @committee.campaign %>
						<p>This committee is tied to the <%= @committee.campaign.name.downcase.titlecase %><%= @committee.campaign.office.titlecase %> campaign</p>
						<% end %>
					</div>
				</div>

				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>